<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp">

        <ImageView
            android:id="@+id/imgDaftar_mitra"
            android:layout_width="159dp"
            android:layout_height="197dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/warning2" />

        <TextView
            android:id="@+id/TV_daftarMitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_marginStart="30dp"
            android:text="APAKAH ANDA INGIN MENJADI MITRA KAMI ?" />

        <TextView
            android:id="@+id/notemitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="11dp"
            android:layout_marginStart="38dp"
            android:text="Silahkan klik daftar jika anda ingin menjadi mitra kami " />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDaftar_mitra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#86A789"
            android:drawablePadding="16dp"
            android:elevation="8dp"
            android:textColor="@color/white"
            android:text="Daftar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBatal_mitra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#DEDEDE"
            android:layout_marginBottom="16dp"
            android:drawablePadding="16dp"
            android:elevation="8dp"
            android:textColor="@color/black"
            android:text="Batalkan"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12dp" />

    </LinearLayout>
</LinearLayout>
